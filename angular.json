{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "tiles": {
      "projectType": "library",
      "root": "projects/tiles",
      "sourceRoot": "projects/tiles/src",
      "prefix": "sky",
      "architect": {
        "build": {
          "builder": "@skyux-sdk/angular-builders:ng-packagr",
          "options": {
            "project": "projects/tiles/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/tiles/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/tiles/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/tiles/src/test.ts",
            "tsConfig": "projects/tiles/tsconfig.spec.json",
            "karmaConfig": "projects/tiles/karma.conf.js",
            "codeCoverage": true,
            "codeCoverageExclude": [
              "**/fixtures/**",
              "projects/tiles/src/test.ts"
            ],
            "styles": [
              "node_modules/@skyux/theme/css/sky.css",
              "node_modules/@skyux/theme/css/themes/modern/styles.css"
            ]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/tiles/**/*.ts",
              "projects/tiles/**/*.html"
            ]
          }
        }
      }
    },
    "tiles-showcase": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "inlineTemplate": true,
          "inlineStyle": true,
          "style": "scss",
          "skipTests": true
        },
        "@schematics/angular:class": {
          "skipTests": true
        },
        "@schematics/angular:directive": {
          "skipTests": true
        },
        "@schematics/angular:guard": {
          "skipTests": true
        },
        "@schematics/angular:interceptor": {
          "skipTests": true
        },
        "@schematics/angular:pipe": {
          "skipTests": true
        },
        "@schematics/angular:service": {
          "skipTests": true
        },
        "@schematics/angular:application": {
          "strict": true
        }
      },
      "root": "projects/tiles-showcase",
      "sourceRoot": "projects/tiles-showcase/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/tiles-showcase",
            "index": "projects/tiles-showcase/src/index.html",
            "main": "projects/tiles-showcase/src/main.ts",
            "polyfills": "projects/tiles-showcase/src/polyfills.ts",
            "tsConfig": "projects/tiles-showcase/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "projects/tiles-showcase/src/favicon.ico",
              "projects/tiles-showcase/src/assets"
            ],
            "styles": [
              "node_modules/@skyux/theme/css/sky.css",
              "node_modules/@skyux/theme/css/themes/modern/styles.css",
              "projects/tiles-showcase/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "fileReplacements": [
                {
                  "replace": "projects/tiles-showcase/src/environments/environment.ts",
                  "with": "projects/tiles-showcase/src/environments/environment.prod.ts"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "buildOptimizer": false,
              "optimization": false,
              "vendorChunk": true,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "tiles-showcase:build:production"
            },
            "development": {
              "browserTarget": "tiles-showcase:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "tiles-showcase:build"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "projects/tiles-showcase/**/*.ts",
              "projects/tiles-showcase/**/*.html"
            ]
          }
        },
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "projects/tiles-showcase/e2e/protractor.conf.js"
          },
          "configurations": {
            "production": {
              "devServerTarget": "tiles-showcase:serve:production"
            },
            "development": {
              "devServerTarget": "tiles-showcase:serve:development"
            }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  },
  "defaultProject": "tiles",
  "cli": {
    "defaultCollection": "@angular-eslint/schematics"
  }
}
